<div class="row mb-4">
    <div class="card-deck">
        {{# each products }}
            <div class="col-sm-6 col-md-4 mb-3">
                <div class="card h-100">
                    <img class="card-img-top"
                         src="{{ this.imagePath }}"
                         alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ this.title }}</h5>
                        <p class="card-text text-secondary">{{ this.description }}</p>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <span class="font-weight-bold mt-1 price">&euro;{{ this.price }}</span>
                            <a href="#" class="btn btn-primary"><i class="fas fa-cart-plus"></i> Add to cart</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>