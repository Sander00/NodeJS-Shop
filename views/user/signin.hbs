<div class="row py-3">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <h2 class="text-center mb-4">Sign in</h2>
            {{#if hasErrors}}
                {{# each messages }}
                    <div class="alert alert-danger">
                        <a class="close font-weight-light" data-dismiss="alert" href="#">Ã—</a>
                        {{ this }}
                    </div>
                {{/each}}
            {{/if}}
            <form action="/user/signin" method="post">
                <fieldset>
                    <div class="form-group has-error">
                        <input class="form-control input-lg" placeholder="E-mail Address" name="email" type="text">
                    </div>
                    <div class="form-group has-success">
                        <input class="form-control input-lg" placeholder="Password" name="password" value=""
                               type="password">
                    </div>
                    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                    <input class="btn btn-lg btn-primary btn-block" value="Sign up" type="submit">
                </fieldset>
            </form>
        </div>
    </div>
</div>