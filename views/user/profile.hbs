<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>User profile</h1>
        <hr>
        <h2>My orders</h2>
        {{# each orders }}
            <div class="card mb-2">
                <div class="card-body">
                    <ul class="list-group">
                        {{# each this.items }}
                            <li class="list-group-item">
                                <span class="badge badge-success right">{{ this.price }}</span>
                                {{ this.item.title }} | {{ this.qty }} Units
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="card-footer">
                    <strong>Total price: &euro;{{ this.cart.totalPrice }}</strong>
                </div>
            </div>
        {{/each}}
    </div>
</div>